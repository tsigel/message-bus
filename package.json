{
  "name": "@tsigel/message-bus",
  "private": false,
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:wavesplatform/waves-browser-bus.git"
  },
  "bugs": {
    "url": "https://github.com/wavesplatform/waves-browser-bus/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": false,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*test.+(ts)"
    ]
  },
  "scripts": {
    "patch": "npm version patch && npm publish && git push",
    "prepare": "npm run build",
    "preversion": "npm run test",
    "postversion": "npm publish",
    "postpublish": "git push",
    "build": "tsc --build ./",
    "test": "jest"
  },
  "dependencies": {
    "typed-ts-events": "^3.0.1"
  }
}
